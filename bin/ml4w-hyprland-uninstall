#!/bin/bash
#  __  __ _    _  ___        __  ____        _    __ _ _           
# |  \/  | |  | || \ \      / / |  _ \  ___ | |_ / _(_) | ___  ___ 
# | |\/| | |  | || |\ \ /\ / /  | | | |/ _ \| __| |_| | |/ _ \/ __|
# | |  | | |__|__   _\ V  V /   | |_| | (_) | |_|  _| | |  __/\__ \
# |_|  |_|_____| |_|  \_/\_/    |____/ \___/ \__|_| |_|_|\___||___/
#                                                                 
# for Hyprland

# ----------------------------------------------------- 
# Uninstallation
# -----------------------------------------------------

source_directory="$(dirname $(pwd))"
source_bin_directory="$source_directory/bin"
source_share_directory="$source_directory/share"
source_lib_directory="$source_directory/lib"

package_name="ml4w-hyprland"
base_directory="/usr"
bin_directory="$base_directory/bin"
share_directory="$base_directory/share/$package_name"
lib_directory="$base_directory/lib/$package_name"

if [ -f "$bin_directory/ml4w-hyprland-setup" ]; then
    rm $bin_directory/ml4w-hyprland-setup
    echo ":: File $bin_directory/ml4w-hyprland-setup removed"
else
    echo ":: ERROR: File $bin_directory/ml4w-hyprland-setup not found"
fi

if [ -d "$share_directory/$package_name" ]; then
    rm -rf $share_directory/$package_name
    echo ":: Directory $share_directory/$package_name removed"
else
    echo ":: ERROR: Directory $share_directory/$package_name not found"
fi

if [ -d "$lib_directory/$package_name" ]; then
    rm -rf $lib_directory/$package_name
    echo ":: Directory $lib_directory/$package_name removed"
else
    echo ":: ERROR: Directory $lib_directory/$package_name not found"
fi

